<h1>This is your cocktail</h1>
<h3><%= @cocktail.name  %></h3>

<% if @cocktail.doses  %>
<h4>Doses:</h4>
      <ul>
        <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> of <%= dose.ingredient.name %> (<%= link_to 'Remove', dose_path(dose), method: :delete %>)</li>
        <% end %>
      </ul>
<% end  %>

  <%= link_to 'add a dose', new_cocktail_dose_path(@cocktail)  %> <br>
  <%= link_to 'back to index', cocktails_path  %>
